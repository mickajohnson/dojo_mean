<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Epic Button Game</title>
    <script src="jquery/dist/jquery.js" type="text/javascript"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
        var socket = io.connect();
        socket.on("clicked", function(data){
          $("#number").html(data.clicked);
        })
        $("#epic").click(function(){
          socket.emit("epic_button")
        })
        $("#reset").click(function(){
          socket.emit("reset")
        })
      });
    </script>
  </head>
  <body>
    <h1>The button has been pushed <span id="number"></span> time(s)</h1>
    <p>Push the button to update the count</p>
    <button id="epic" type="button" name="button">PUSH THIS BUTTON</button>
    <button id="reset" type="button" name="button">Reset count</button>
  </body>
</html>
