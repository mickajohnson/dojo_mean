<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
  </head>
  <body>
    <h1>Message Board</h1>
    <% if(typeof(errors) != 'undefined' ) { %>
      <% for (var x in errors) { %>
       <h3><%= errors[x].message %></h3>
      <% } %>
    <% } %>
    <hr>
    <form action="/" method="post">
        <label for="name">
          Name: <input type="text" name="name">
        </label>
        <label for="text">
          Message: <textarea name="message" rows="8" cols="80"></textarea>
        </label>
        <input type="submit" value="Submit">
    </form>
    <% if(typeof(posts) != 'undefined' ) { %>
      <%for (var x = 0 ; x < posts.length; x++){ %>
        <h3>Name: <%=posts[x].name%></h3>
        <h3>Message: <%=posts[x].message%></h3>
        <%if (posts[x]._comments.length > 0){%>
          <%for (var y = 0; y < posts[x]._comments.length; y++){%>
            <h5>Name: <%=posts[x]._comments[y].name%></h5>
            <h5>Comment: <%=posts[x]._comments[y].text%></h5>
          <%}%>
        <%}%>
        <form action="/comment/<%=posts[x].id%>" method="post">
          <label for="name">
            Name: <input type="text" name="name">
          </label>
          <label for="text">
            Comment: <textarea name="text" rows="8" cols="80"></textarea>
          </label>
          <input type="submit" value="Submit">
        </form>
      <%}%>
    <%}%>
  </body>
</html>
